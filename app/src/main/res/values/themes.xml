<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BugisMakassar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BugisMakassar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.BugisMakassar.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.BugisMakassar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NavigationDrawer">
        <item name="colorPrimary">@color/green</item>
        <item name="colorSecondary">@color/dark_green</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="listPreferredItemHeightSmall">50dp</item>
    </style>

    <style name="AppBar" parent="Theme.BugisMakassar">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="listPreferredItemHeightSmall">60dp</item>
    </style>
</resources>